<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.adamhome.msgsharingapp">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_shareapp"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_shareapp_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <!-- First activity page -->
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Second activity page -->
        <activity android:name=".activities.SecondActivity">
        </activity>

        <!--Third activity page-->
        <activity android:name=".activities.ThirdActivity">
        </activity>
    </application>

</manifest>