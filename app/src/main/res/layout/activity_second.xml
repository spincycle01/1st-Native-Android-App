<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SecondActivity"
        android:orientation="vertical">

    <!--message on screen-->
    <TextView
            android:id="@+id/txvUserMessage"
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#de075fb7"
            android:layout_margin="20dp"
            android:textSize="30sp"/>



<!--Layout of the two images -->
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <!--image 1-->
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@android:color/background_light"
            android:id="@+id/secondImage"
            android:src="@drawable/letter"/>

    <!--image 2-->
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@android:color/background_light"
            android:id="@+id/thirdImage"
            android:src="@drawable/arrow"/>


</LinearLayout>
</LinearLayout>